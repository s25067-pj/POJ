package snake;

public class main {
	
	public static void main(String[] args) {
		
		Ramka ramka = new Ramka();
		
	}
}


package snake;

import javax.swing.JFrame;

public class Ramka extends JFrame {

	Ramka(){
		
		Panel panel = new Panel();
		
		this.add(panel);
		this.setTitle("Snake");
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setResizable(false);
		this.pack();
		this.setVisible(true);
		this.setLocationRelativeTo(null);
	}

}

package snake;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import java.util.Random;
import javax.swing.JPanel;

public class Panel extends JPanel implements ActionListener{
	
	static final int szerokoscRamki = 700;
	static final int wysokoscRamki = 700;
	static final int rozmiarElementu = 25;
	static final int iloscElementowNaPlanszy = 19600;
	static final int tepoGry = 75;
	final int wazX[] = new int[iloscElementowNaPlanszy]; 
	final int wazY[] = new int[iloscElementowNaPlanszy];
	int dlugoscWeza = 3;
	int punkty;
	int jedzenieX;
	int jedzenieY;
	char kierunek = 'D';
	boolean running = false;
	Timer timer;
	Random random;
	Random rand = new Random();
		
	
	Panel () {
		random = new Random();
		this.setPreferredSize(new Dimension(szerokoscRamki, wysokoscRamki));
		this.setBackground(Color.black);
		this.setFocusable(true);
		this.addKeyListener(new Sterowanie());
		startGame();
		
	}
	public void ekranPoczatkowy (Graphics g) {
		g.setColor(Color.blue);
		g.setFont(new Font ("Ink Free", Font.BOLD, 75));
		FontMetrics metrics1 = getFontMetrics(g.getFont());
		g.drawString("GRA SNAKE", (szerokoscRamki - metrics1.stringWidth("GRA SNAKE"))/2, wysokoscRamki/2);
		
		g.setFont(new Font ("Ink Free", Font.BOLD, 40));
		FontMetrics metrics2 = getFontMetrics(g.getFont());
		g.drawString("CZESC! WITAJ W GRZE SNAKE!", (szerokoscRamki - metrics2.stringWidth("CZESC! WITAJ W GRZE SNAKE!"))/2, wysokoscRamki/2);
		g.drawString("CELEM GRY JEST NAKARMIENIE WEZA JAK NAJWIEKSZA PORCJA JEDZENIA, KTORE POJAWIA SIE W LOSOWYCH MIEJSCACH NA EKRANI", (szerokoscRamki - metrics2.stringWidth("CELEM GRY JEST NAKARMIENIE WEZA JAK NAJWIEKSZA PORCJA JEDZENIA, KTORE POJAWIA SIE W LOSOWYCH MIEJSCACH NA EKRANI"))/2, wysokoscRamki/2);
		g.drawString("NA POCZATKU WAZ SKLADA SIE Z GLOWY + DWOCH SEGMENTOW OGONK", (szerokoscRamki - metrics1.stringWidth("NA POCZATKU WAZ SKLADA SIE Z GLOWY + DWOCH SEGMENTOW OGONK"))/2, wysokoscRamki/2);
		g.drawString("GRA ROZPOCZYNA SIE OD SRODKA PLANSZY W KIERUNKU JEJ GORNEJ KRAWEDZI", (szerokoscRamki - metrics1.stringWidth("GRA ROZPOCZYNA SIE OD SRODKA PLANSZY W KIERUNKU JEJ GORNEJ KRAWEDZI"))/2, wysokoscRamki/2);
		g.drawString("WEZEM MOZESZ STEROWAC ZA POMOCA STRZALEK", (szerokoscRamki - metrics1.stringWidth("WEZEM MOZESZ STEROWAC ZA POMOCA STRZALEK"))/2, wysokoscRamki/2);
		g.drawString("OGON WEZA ROSNIE WPROSTPROPORCJONALNIE DO ILOSC ZJEDZONEGO POZYWIENIA", (szerokoscRamki - metrics1.stringWidth("OGON WEZA ROSNIE WPROSTPROPORCJONALNIE DO ILOSC ZJEDZONEGO POZYWIENIA"))/2, wysokoscRamki/2);
		g.drawString("GRA SKONCZY SIE W PRZYPADKU WYJECHANIA WEZA POZA OBSZAR PLANSZY, LUB KIEDY WAZ NAJEDZIE NA WLASNY OGON", (szerokoscRamki - metrics1.stringWidth("GRA SKONCZY SIE W PRZYPADKU WYJECHANIA WEZA POZA OBSZAR PLANSZY, LUB KIEDY WAZ NAJEDZIE NA WLASNY OGON"))/2, wysokoscRamki/2);
		g.drawString("POWODZENIA!", (szerokoscRamki - metrics1.stringWidth("POWODZENIA!"))/2, wysokoscRamki/2);
		g.drawString("Kliknij ENTER, aby rozpocząć", (szerokoscRamki - metrics2.stringWidth("Kliknij ENTER, aby rozpocząć"))/2, wysokoscRamki/2);
		//scan.nextLine();
		
	}
	
	public void startGame() {	
		jedzenie();
		running = true;
		timer = new Timer(tepoGry, this);
		timer.start();	
	}
	
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		draw(g);
	}
	
	
	public void draw (Graphics g) {
		
		
		if(running) {
			
			g.setColor(Color.red);
			g.fillRect(jedzenieX, jedzenieY, rozmiarElementu, rozmiarElementu);
			

			for (int i=0; i< dlugoscWeza; i++) {
				if (i == 0) {
					g.setColor(Color.green);
					g.fillOval(wazX[i], wazY[i], rozmiarElementu, rozmiarElementu);
					
				}
				else {
					g.setColor(Color.green);
					g.fillOval(wazX[i], wazY[i], rozmiarElementu, rozmiarElementu);
				}
			}

		}
		else {
			gameOver(g);
		}
		
	}
	
	public void jedzenie() {
		jedzenieX = random.nextInt((int)(szerokoscRamki/rozmiarElementu))*rozmiarElementu;
		jedzenieY = random.nextInt((int)(wysokoscRamki/rozmiarElementu))*rozmiarElementu;	
	}
	
	public void move() {
		
		for(int i = dlugoscWeza; i>0; i--) {
			wazX[i] = wazX[i-1];
			wazY[i] = wazY[i-1];
			
		}
		switch(kierunek) {
		case 'U':
			wazY[0]= wazY[0] - rozmiarElementu;
			break;
		case 'D':
			wazY[0]= wazY[0] + rozmiarElementu;
			break;
		case 'L':
			wazX[0]= wazX[0] - rozmiarElementu;
			break;
		case 'R':
			wazX[0]= wazX[0] + rozmiarElementu;
			break;
		}
		for(int i = dlugoscWeza; i>0;i--) {
			if ((wazX[0]==wazX[i]) && (wazY[0]==wazY[i])) {
				running = false;
			}
		}
		if (wazX[0]<0) {
			running = false;
		}
		if (wazY[0]<0) {
			running = false;
		}
		if (wazX[0]> szerokoscRamki) {
			running = false;
		}
		if (wazY[0]> wysokoscRamki) {
			running = false;
		}
		if (!running) {
			timer.stop();
		}
	}
	
	public void checkApple() {
		if ((wazX[0] == jedzenieX) && (wazY[0] == jedzenieY)) {
			dlugoscWeza++;
			punkty++;
			jedzenie();
		}
	}
	
	public void gameOver (Graphics g) {
		g.setColor(Color.red);
		g.setFont(new Font ("Ink Free", Font.BOLD, 75));
		FontMetrics metrics1 = getFontMetrics(g.getFont());
		g.drawString("KONIEC GRY!", (szerokoscRamki - metrics1.stringWidth("KONIEC GRY!"))/2, wysokoscRamki/2);
	
		g.setColor(Color.red);
		g.setFont(new Font ("Ink Free", Font.BOLD, 40));
		FontMetrics metrics2 = getFontMetrics(g.getFont());
		g.drawString("Twój wynik: "+punkty, (szerokoscRamki - metrics2.stringWidth("Twój wynik: "+punkty))/2, g.getFont().getSize());

	}
	
	@Override
	public void actionPerformed(ActionEvent e) {

		if(running) {
			move();
			checkApple();

		}
		repaint();
	}
	
	public class Sterowanie extends KeyAdapter {
		@Override
		public void keyPressed(KeyEvent e) {
				switch(e.getKeyCode()) {
				case KeyEvent.VK_LEFT:
					if(kierunek != 'R') {
						kierunek = 'L';
					} break;
				case KeyEvent.VK_RIGHT:
					if(kierunek != 'L') {
						kierunek = 'R';
					} break;
				case KeyEvent.VK_UP:
					if(kierunek != 'D') {
						kierunek = 'U';
					} break;
				case KeyEvent.VK_DOWN:
					if(kierunek != 'U') {
						kierunek = 'D';
					} break;
				}
		}
		
	}

}

